$resident_id = $_SESSION['resident_id'] ?? null;

// Fetch upcoming event announcements only
$events = [];
$events_query = "SELECT a.*, u.full_name as created_by_name
    FROM announcements a
    LEFT JOIN users u ON a.created_by = u.id
    WHERE a.event_date IS NOT NULL
      AND a.event_date >= CURDATE()
      AND a.status = 'active'
    ORDER BY a.event_date ASC, a.event_time ASC";

$result = mysqli_query($connection, $events_query);
if ($result && mysqli_num_rows($result) > 0) {
    while ($row = mysqli_fetch_assoc($result)) {
        $events[] = $row;
    }
}

